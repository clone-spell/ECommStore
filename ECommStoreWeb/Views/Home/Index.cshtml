@{
    ViewData["Title"] = "Home Page";
}

<style>
    .category-image{
        width:100%;
        height:12rem;
        padding:1rem;
        object-fit:contain;
    }
</style>

<!-- categories -->
<div class="row">
    <ul class="nav justify-content-center border my-3">
        <li class="nav-item">
            <a class="nav-link active" href="#">Mobiles</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="#">Fashion</a>
        </li>
        <li class="nav-item">
